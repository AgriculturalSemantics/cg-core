{
  "name": "cg-core",
  "version": "2.0.0",
  "description": "CG Core metadata reference guide.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AgriculturalSemantics/cg-core.git"
  },
  "scripts": {
    "build:css": "sass --style expanded scss/style.scss main.css.tmp && cleancss -O1 main.css.tmp -o css/main.css",
    "build:js": "terser node_modules/jquery/dist/jquery.slim.min.js node_modules/bootstrap/dist/js/bootstrap.min.js -o js/bundle.min.js",
    "build": "npm run build:css && npm run build:js && npm run clean",
    "clean": "rm main.css.tmp main.css.tmp.map"
  },
  "keywords": "schema",
  "author": "Alan Orth",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "bootstrap": "^5.2.0",
    "clean-css-cli": "^5.6.1",
    "jquery": "^3.6.1",
    "sass": "^1.55.0",
    "terser": "^5.15.0"
  }
}
